
@{
    ViewData["Title"] = "PhuongTien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <style>
        .swal-wide {
            width: 500px !important;
            height: 350px !important;
            font-size: 1.7rem !important;
        }
    </style>
@model List<PhuongTienViewModel>
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div id="store" class="col-md-12">
                <!-- store products -->
                <div class="row">
                    @foreach (var phuongTien in Model)
                    {
                        <!-- product -->
                        <form asp-controller="Admin" asp-action="PhuongTien" method="post">
                            <input id="hienabc" type="hidden" value="@(Model[1].check)" />
                            <input type="hidden" name="bienso" value="@phuongTien.BienKiemSoat" />
                            <div class="col-md-3 col-xs-6">
                                <div class="product">
                                    <div class="product-img">
                                        <img src=@phuongTien.HinhAnhXe alt="">
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@phuongTien.LoaiPhuongTien</p>
                                        <h3 class="product-name"><a href="@Url.Action("TimNhanVienPhuongTien",new { id=phuongTien.BienKiemSoat })">@phuongTien.BienKiemSoat</a></h3>
                                        <h4 class="product-price">@phuongTien.GiayPhepSoHuu</h4>
                                    </div>
                                    <div class="add-to-cart">
                                        <button class="add-to-cart-btn" type="submit">
                                            <i class="fas fa-trash-alt"></i> Xóa Phương Tiện này
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- /product -->
                    }
                </div>
            </div>
            <!-- /STORE -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.all.min.js"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@10.10.1/dist/sweetalert2.min.css'>
    <script type="text/javascript">
        var hien1 = new Boolean(document.getElementById("hienabc").value);
        if(hien1==true){
            Swal.fire({
		      icon: 'error',
	          title: 'Oops...',
		      text: 'Phương tiện này đã có Shipper sở hữu!!!',
		      customClass: 'swal-wide',
		      timer: 5000
		    })
       }
    </script>
}

