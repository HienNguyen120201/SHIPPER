@{
    Layout = null;
}
@model SHIPPER.Models.KhachHangViewModel


<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
      rel="stylesheet"
      id="bootstrap-css" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html>
<head>
    <title>Trang đăng ký</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
          crossorigin="anonymous" />

    <!--Fontawesome CDN-->
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
          integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU"
          crossorigin="anonymous" />

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="/css/site.css" />
</head>
<body class="login-page">
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Đăng Ký Khách Hàng</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Register" method="post">
                        <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Tên tài khoản"
                                   asp-for="TaiKhoan" />
                        </div>
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </span>
                            </div>
                            <input type="password"
                                   class="form-control"
                                   placeholder="Mật khẩu"
                                   asp-for="MatKhau" />
                        </div>
                        <span asp-validation-for="ReMatKhau" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-key"></i>
                                </span>
                            </div>
                            <input type="password"
                                   class="form-control"
                                   placeholder="Nhập lại mật khẩu"
                                   asp-for="ReMatKhau" />
                        </div>
                        <span asp-validation-for="Ho" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-id-card a"></i>
                                </span>
                            </div>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Họ"
                                   asp-for="Ho" />
                        </div>
                        <span asp-validation-for="TenLot" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-id-card a"></i>
                                </span>
                            </div>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Tên Lót"
                                   asp-for="TenLot" />
                        </div>
                        <span asp-validation-for="Ten" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fa fa-id-card a"></i>
                                </span>
                            </div>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Tên"
                                   asp-for="Ten" />
                        </div>
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-birthday-cake"></i>
                                </span>
                            </div>
                            <input type="date" id="birthdaytime" class="form-control" asp-for="NgaySinh">
                        </div>
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-venus-mars"></i>
                                </span>
                            </div>
                            <select class="form-control" asp-for="GioiTinh">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                        <span asp-validation-for="Cmnd" class="text-danger"></span>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="fas fa-address-card"></i>
                                </span>
                            </div>
                            <input type="text"
                                   class="form-control"
                                   placeholder="Căn cước công dân"
                                   asp-for="Cmnd" />
                        </div>
                        @if (Model != null)
                        {
                            @if (Model.ErrorMessage != null)
                            {
                                <span class="text-danger">@Model.ErrorMessage</span>
                            }
                        }
                        <div class="form-group">
                            <input type="submit"
                                   value="Đăng ký"
                                   class="btn float-right login_btn" />
                        </div>
                    </form>
                    <div class="form-group">
                        <a href="@Url.Action("Index", "Home")"
                           class="btn float-left login_btn">
                            Trở lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
